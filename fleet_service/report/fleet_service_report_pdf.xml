<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_fleet_service_report_pdf" model="ir.actions.report">
            <field name="name">Action Fleet Service Report PDF</field>
            <field name="model">fleet.vehicle</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">fleet_service.fleet_service_report_pdf</field>
            <field name="report_file">fleet_service.fleet_service_report_pdf</field>
            <field name="print_report_name">PDF Fleet Vehicle Report</field>
            <field name="binding_model_id" ref="model_fleet_vehicle"/>
            <field name="binding_type">report</field>
        </record>

        <template id="fleet_service_report_pdf">
            <t t-call="web.html_container" t-lang="en_US">
                <div class="page">
                    <table class="table table-bordered">
                        <tr>
                            <th>Diagnosis date</th>
                            <th>Diagnosis next date</th>
                            <th>State</th>
                        </tr>
                        <t t-foreach="history_datas" t-as="o">
                            <tr>
                                <td><t t-esc="o['diagnosis_date']" /></td>
                                <td><t t-esc="o['diagnosis_next_date']" /></td>
                                <td><t t-esc="o['state']" /></td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </template>

        <!-- <template id="fleet_service_report_pdf">
            <t t-call="fleet_service_report_pdf_body" t-lang="en_US"/>
        </template> -->

    </data>
</odoo>