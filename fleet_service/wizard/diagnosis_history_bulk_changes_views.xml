<odoo>
    <record id="view_diagnosis_history_bulk_changes" model="ir.ui.view">
        <field name="name">Diagnosis History Bulk Changes</field>
        <field name="model">diagnosis.history.bulk.changes</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="template_id" />
                        </group>
                        <group>
                            <field name="from_template_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Diagnosis History">
                            <field name="line_ids" />
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Convert" name="do_action" type="object" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_diagnosis_history_bulk_changes" model="ir.actions.act_window">
        <field name="name">Actions Diagnosis History Bulk Changes</field>
        <field name="res_model">diagnosis.history.bulk.changes</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        parent="fleet.fleet_vehicles"
        action="action_diagnosis_history_bulk_changes"
        name="Diagnosis History Bulk Changes"
        id="menu_diagnosis_history_bulk_changes"
        sequence="100" />

</odoo>